@model Productt.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="fas fa-exclamation-triangle fa-3x text-danger mb-3"></i>
                        <h2 class="card-title mb-1">Delete Category</h2>
                        <p class="text-muted">Are you sure you want to delete this category?</p>
                    </div>

                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        This action cannot be undone. All products in this category will be affected.
                    </div>

                    <div class="mb-4">
                        <h5 class="mb-3">Category Details</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Name</dt>
                            <dd class="col-sm-8">@Model.Name</dd>

                            <dt class="col-sm-4">Products</dt>
                            <dd class="col-sm-8">@(Model.Products?.Count() ?? 0) items</dd>
                        </dl>
                    </div>

                    <form asp-action="Delete" class="d-grid gap-2">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete Category
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
    }

    dt {
        color: #6c757d;
    }
</style>
