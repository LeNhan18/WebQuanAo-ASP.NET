@model Productt.Models.Product

<div class="container">
    <h2 class="section-title">
        <i class="fas fa-plus me-2"></i>Thêm sản phẩm mới
    </h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-8">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">Tên sản phẩm</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Price" class="control-label">Giá bán</label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Price2" class="control-label">Giá gốc</label>
                            <input asp-for="Price2" class="form-control" />
                            <span asp-validation-for="Price2" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CategoryId" class="control-label">Danh mục</label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageFile" class="control-label">Hình ảnh</label>
                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="image-preview-container">
                    <img id="imagePreview" src="#" alt="Preview" class="img-fluid d-none" />
                </div>
            </div>
        </div>

        <div class="form-group mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Lưu sản phẩm
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                
                reader.onload = function(e) {
                    $('#imagePreview')
                        .attr('src', e.target.result)
                        .removeClass('d-none');
                }
                
                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#ImageFile").change(function() {
            readURL(this);
        });
    </script>
}

<style>
.image-preview-container {
    border: 2px dashed #ddd;
    border-radius: 10px;
    padding: 1rem;
    text-align: center;
    min-height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
}

#imagePreview {
    max-width: 100%;
    max-height: 300px;
    border-radius: 5px;
}
</style>