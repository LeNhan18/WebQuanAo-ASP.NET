@{
    ViewData["Title"] = "Quản trị";
}

<div class="admin-dashboard">
    <h2 class="mb-4"><i class="fas fa-tachometer-alt me-2"></i>Bảng điều khiển</h2>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card admin-card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-users me-2"></i>Quản lý người dùng</h5>
                    <p class="card-text">Xem và quản lý tài khoản người dùng</p>
                    <a asp-action="Users" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card admin-card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-tags me-2"></i>Quản lý danh mục</h5>
                    <p class="card-text">Thêm, sửa, xóa danh mục sản phẩm</p>
                    <a asp-action="Categories" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card admin-card">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-box me-2"></i>Quản lý sản phẩm</h5>
                    <p class="card-text">Thêm, sửa, xóa sản phẩm</p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.admin-dashboard {
    padding: 2rem;
}

.admin-card {
    transition: all 0.3s ease;
    border: none;
    border-radius: 15px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
}

.admin-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0,0,0,0.15);
}

.card-title {
    color: #2c3e50;
    font-weight: 600;
}

.card-text {
    color: #666;
}
</style> 